@page
@model loginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="~/assets/img/logo/favicon.png">
    <link href="~/assets/vendor/font-awsome/css/all.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/vendor/toastr/toastr.min.css" rel="stylesheet" />
    <link href="~/assets/css/proximanova.css" rel="stylesheet" />
    <link href="~/assets/css/login.css" rel="stylesheet" />
    
    <title>NIFT Image Based Clearing</title>

    <style>
        .hide {
            display: none;
        }
    </style>
</head>
<body>

    <main class="align-items-center min-vh-100 py-3 py-md-0">
        <form class="signin-form" id="form1" method="post" asp-page-handler="PassCred">
            <div class="container">
                <div class="col-lg-12 mb-4">
                    <div id="div_msg" class="card bg-danger text-white shadow hide">
                        <div class="card-body">
                            <label id="msg"></label>
                        </div>
                    </div>
                </div>
                <div class="card login-card">
                    <div class="row no-gutters">
                        <div class="col-md-6">
                            @* <img src="assets/img/maps/central-operations.jpg" alt="login" class="login-card-img"/> *@
                            <div id="demo" class="carousel slide" data-ride="carousel" data-interval="3000">
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="~/assets/img/slider/B1.jpg" alt="E-Clearing1" width="700" height="620">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/assets/img/slider/B2.jpg" alt="E-Clearing2" width="700" height="620">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="~/assets/img/slider/B3.jpg" alt="E-Clearing3" width="700" height="620">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img alt="NIFT-eClearing" src="~/assets/img/logo/nift-eclearing-logo-login.png" class="d-block mx-auto login-logo"/> 
                            <h5 class="mb-0 text-center">IBCS Clearing System</h5>
                            <div class="wrap">
                                <div class="login-wrap p-4 px-md-5 py-md-4">
                                    <div class="d-flex">
                                        <div class="w-100">
                                            <h3 class="mb-4">Sign In</h3>
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="userId">Username</label>
                                        <input type="text" class="form-control" required="required" id="userId" tabindex="1" maxlength="50" />

                                    </div>

                                    <div class="form-group">
                                        <label for="pass_word">Password</label>
                                        <input id="pass_word" type="password" required="required" class="form-control mb-2" tabindex="2" minlength="8" maxlength="25" />
                                        <span toggle="#pass_word" class="fa-solid fa-eye field-icon toggle-password"></span>
                                        <a href="/ForgetPassword" class="font-weight-bold">Forgot Password</a>
                                    </div>

                                   @* @{
                                        var imgSrc = ViewData["imageSrc"];
                                        var capval = ViewData["capval"];
                                    }
                                    <div class="form-group mt-4">
                                        <input id="cap_text" value="@capval" hidden="hidden"/>
                                        <img src="@imgSrc" ID="imgCaptcha" Height="80" Width="450" />
                                    </div>*@

                                    @*<div class="form-group mt-4">
                                        <input id="txtCaptcha" required="required" class="form-control" style="text-transform:uppercase;" tabindex="3" />
                                        <label class="form-control-placeholder" for="txtCaptcha">Captcha</label>
                                        <Label ID="lblMessage"></Label>
                                    </div>*@

                                    <div class="input-group mt-4">
                                        <div id="captchaBackground" onmousedown='return false;' onselectstart='return false;'>
                                            <span id="captcha_text"></span>
                                        </div>
                                        <div class="input-group-append">
                                            <button class="btn btn-light" type="button" id="refresh"><i class="fa-solid fa-rotate-right"></i></button>
                                        </div>
                                    </div>

                                    @* <div class="form-group mt-4">
                                        <div id="captchaBackground">
                                            <span id="captcha_text"></span>
                                        </div>
                                    </div> *@

                                    <div class="form-group mt-4">
                                        <input type="text" class="form-control" required="required" id="captcha" tabindex="3"/>
                                        <label class="form-control-placeholder" for="captcha">Captcha</label>
                                        <span id="output"></span>
                                    </div>

                                    <div class="form-group text-center">
                                        <button type="button" id="Sign_IN" tabindex="4" class="btn btn-secondary btn-lg rounded submit px-3">Sign In</button>
                                    </div>
                                    @*<div class="form-group d-md-flex">
                                        <div class="w-50 text-left">
                                            <a href="#" class="font-weight-bold">Forgot Username</a>
                                        </div>
                                        <div class="w-50 text-md-right">
                                            <a href="#" class="font-weight-bold">Forgot Password</a>
                                        </div>
                                    </div>*@

                                    @* <div class="form-group d-md-flex mb-0">
                                        <div class="w-50 text-left">
                                            <!-- <a href="#" class="font-weight-bold">Forgot Username</a> -->
                                        </div>
                                        <div class="w-50 text-md-right">
                                            <a href="#" class="font-weight-bold">Forgot Password</a>
                                        </div>
                                    </div> *@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </main>
    
    <script src="~/assets/vendor/jquery/jquery.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/toastr/toastr.min.js"></script>  
    <script src="~/assets/js/login.js"></script>
    <script src="~/assets/js/captacha.js"></script> 
    <script>

        $('#captcha').keydown(function (e) {
            if (e.keyCode == 13) {
                //$('#form1').submit();
                $('#Sign_IN').click();
            }
        });
    </script>

</body>
</html>